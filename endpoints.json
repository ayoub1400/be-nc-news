  "POST /api/articles/:article_id/comments": {
    "description": "serves an object containing a username, and a comment body",
    "queries": [],
    "exampleInput": {
      "username": "butter_bridge",
      "body": "invoke yourself like a function"
    },
    "exampleResponse": {
      "comment_id": 19,
      "body": "New Comment",
